{
  "manifest_version": 3,
  "name": "Phishing Site Detector",
  "description": "팝업 디자인 수정",
  "version": "2.2.6",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "http://localhost:3000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "48": "images/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  }
}
